<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/menu_gradient_bg"
    android:orientation="vertical">

    <ImageView android:id="@+id/button_close_pause"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/close_state"
        android:layout_gravity="right"/>
    <TextView 
            android:id="@+id/text_gamepaused"
            android:background="@drawable/platform_without_glow"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:textSize="24sp"
            android:textColor="#3f1600"
            android:gravity="center"
            android:layout_gravity="center"
            android:text="GAME PAUSED"/>
    <Button 
        	android:layout_marginTop="20dp"
            android:id="@+id/button_resume"
            android:background="@drawable/text_selector"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:textSize="24sp"
            android:textColor="#3f1600"
            android:gravity="center"
            android:layout_gravity="center"
            android:text="RESUME"/>
    <Button 
            android:id="@+id/button_quit_pause"
            android:background="@drawable/text_selector"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:textSize="24sp"
            android:textColor="#3f1600"
            android:gravity="center"
            android:layout_gravity="center"
            android:text="QUIT"/>
    <ImageView android:layout_width="match_parent"
        android:layout_height="70dp"
        android:scaleType="fitXY"
        android:src="@drawable/menu_grass"/>
</LinearLayout>
