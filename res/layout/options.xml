<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android" 
    android:layout_width="250dp"
    android:layout_height="wrap_content"
    android:background="@drawable/menu_gradient_bg"
    android:orientation="vertical">
    
    <ImageView android:id="@+id/button_close_options"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/close_state"
        android:layout_gravity="right"/>
    <LinearLayout android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView 
            android:id="@+id/text_options_title"
            android:background="@drawable/platform_without_glow"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:textSize="24sp"
            android:textColor="#3f1600"
            android:gravity="center"
            android:layout_gravity="center"
            android:text="Options"/>
    </LinearLayout>
    
    <RelativeLayout android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">
        <TextView 
            android:id="@+id/text_sound"
            android:layout_alignParentLeft="true"
            android:background="@drawable/platform_without_glow"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:textColor="#3f1600"
            android:gravity="center"
            android:textSize="24sp"
            android:layout_centerVertical="true"
            android:text="Sound"/>
        <CheckBox 
            android:id="@+id/check_sound"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@drawable/checkbox_state"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
    
    <RelativeLayout android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/text_music"
            android:background="@drawable/platform_without_glow"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:textColor="#3f1600"
            android:text="Music"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:textSize="24sp"
            />
        <CheckBox 
            android:id="@+id/check_music"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:button="@drawable/checkbox_state"
            android:layout_gravity="right"/>
    </RelativeLayout>
    
    <Button 
        android:layout_marginTop="30dp"
        android:id="@+id/button_signout"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:textColor="#3f1600"
        android:gravity="center"
        android:layout_gravity="center"
        android:text="Sign Out"
        android:background="@drawable/text_selector"
        android:textSize="24sp"/>
    
    <Button 
        android:background="@drawable/text_selector"
        android:id="@+id/button_rate"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:textColor="#3f1600"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="Rate Us"
        android:textSize="24sp"/>
    <ImageView android:layout_width="match_parent"
        android:layout_height="70dp"
        android:scaleType="fitXY"
        android:src="@drawable/menu_grass"/>
</LinearLayout>