<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/menu_gradient_bg"
    android:orientation="vertical">
    
    
    <TextView 
            android:id="@+id/text_difficulty"
            android:background="@drawable/platform_without_glow"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:textSize="24sp"
            android:textColor="#3f1600"
            android:gravity="center"
            android:layout_gravity="center"
            android:text="Select Difficulty"/>
   
    <Button 
        	android:layout_marginTop="30dp"
            android:id="@+id/button_easy"
            android:background="@drawable/text_selector"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:textSize="24sp"
            android:textColor="#3f1600"
            android:gravity="center"
            android:layout_gravity="center"
            android:text="EASY"/>
    <Button 
        	android:layout_marginTop="15dp"
            android:id="@+id/button_med"
            android:background="@drawable/text_selector"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:textSize="24sp"
            android:textColor="#3f1600"
            android:gravity="center"
            android:layout_gravity="center"
            android:text="MEDIUM"/>
    <Button 
        	android:layout_marginTop="15dp"
            android:id="@+id/button_hard"
            android:background="@drawable/text_selector"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:textSize="24sp"
            android:textColor="#3f1600"
            android:gravity="center"
            android:layout_gravity="center"
            android:text="HARD"/>
    <ImageView android:layout_width="match_parent"
        android:layout_height="70dp"
        android:scaleType="fitXY"
        android:src="@drawable/menu_grass"/>
</LinearLayout>